rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document (userId field)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Legal Queries: Users can read/write their own queries
    match /legal_queries/{queryId} {
      // Allow users to create if they set userId to themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow read/update/delete only for owner
      allow read, update, delete: if resource.data.userId == request.auth.uid;
    }
    
    // Document Analyses
    match /document_analyses/{docId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if resource.data.userId == request.auth.uid;
    }
    
    // Advice Ledger (Audit Trail)
    match /advice_ledger/{recordId} {
      // Users can create records for themselves (backend logic enforces userId)
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can only read their own audit trail
      allow read: if resource.data.userId == request.auth.uid;
      // Audit records are immutable (no update/delete)
      allow update, delete: if false;
    }
    
    // Feedback: Anyone authenticated can submit
    match /feedback/{feedbackId} {
      allow create: if isAuthenticated();
      // Allow reading feedback (for app stats) - restrictive would be better but keeps MVP simple
      allow read: if isAuthenticated();
    }
    
    // API Keys - managed by server (Firebase Admin SDK bypasses rules)
    // Client-side access is denied for security
    match /api_keys/{keyId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Admin SDK can write
    }
    
    // API Usage Logs - read-only for key owners
    match /api_usage_logs/{logId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Admin SDK can write
    }

    // Default deny for other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
